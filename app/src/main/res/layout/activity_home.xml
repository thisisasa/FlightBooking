<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".HomeActivity">
    <include layout="@layout/home_header_layout"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:paddingBottom="60dp"
        android:fontFamily="@font/manjari"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSeeAll"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="See All"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rvCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvCategoryName"
        app:layout_constraintTop_toTopOf="@+id/rvCategory"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivTick"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHm"
        app:layout_constraintStart_toEndOf="@+id/ivHm"
        app:layout_constraintTop_toTopOf="@+id/ivHm"
        app:srcCompat="@drawable/tickets" />

    <ImageView
        android:id="@+id/ivNotifi"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivTick"
        app:layout_constraintStart_toEndOf="@+id/ivTick"
        app:layout_constraintTop_toTopOf="@+id/ivTick"
        app:srcCompat="@drawable/notification" />


    <ImageView
        android:id="@+id/ivHm"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manjari"
        android:text="Home"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ivHm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivHm"
        app:layout_constraintTop_toBottomOf="@+id/ivHm" />

    <TextView
        android:id="@+id/tvTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manjari"
        android:text="Tickets"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHome"
        app:layout_constraintEnd_toEndOf="@+id/ivTick"
        app:layout_constraintStart_toStartOf="@+id/ivTick"
        app:layout_constraintTop_toTopOf="@+id/tvHome" />

    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manjari"
        android:text="Notification"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTicket"
        app:layout_constraintEnd_toEndOf="@+id/ivNotifi"
        app:layout_constraintStart_toStartOf="@+id/ivNotifi"
        app:layout_constraintTop_toTopOf="@+id/tvTicket"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivProF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivNotifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivNotifi"
        app:layout_constraintTop_toTopOf="@+id/ivNotifi"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manjari"
        android:text="Profile"
        app:layout_constraintEnd_toEndOf="@+id/ivProF"
        app:layout_constraintStart_toStartOf="@+id/ivProF"
        app:layout_constraintTop_toBottomOf="@+id/ivProF" />

</androidx.constraintlayout.widget.ConstraintLayout>